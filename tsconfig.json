{
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "public"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true
  }
}
